{

    "manifest_version": 2,
    "name": "ezButtons",
    "version": "1.0",
    "description": "Select text and see it defined at the bottom of the page",
    
    "icons": {
        "48": "icons/icoQuickDef-32.png"
    },

    "permissions": [
        "activeTab",
		"tabs"
    ],

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["ezButtons.js", "ezLibrary.js"]
        }
    ],

    "background": {
        "scripts": ["background.js"]
		
    },
	
	
	"page_action": {
		"default_icon": "icons/icoQuickDef-32.png",
		"browser_style": true
	},

    "browser_action": {
        "default_icon": "icons/icoQuickDef-32.png",
        "default_title": "QuickDef"
    }

}